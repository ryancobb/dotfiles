hyper - e : open -a 'Hey'
hyper - i : open -a 'Orion'
hyper - m : open -a 'Music'
hyper - s : open -a 'Slack'
hyper - space : open -a 'Raycast'
hyper - t : open -a 'kitty'
hyper - x : open -a 'Todoist'

hyper - b : yabai -m space --layout bsp

shift + cmd - h : yabai -m window --focus west || $(yabai -m display --focus west)
shift + cmd - j : yabai -m window --resize left:-50:0 ||  $(yabai -m window --resize right:-50:0)
shift + cmd - k : yabai -m window --resize right:50:0 || $(yabai -m window --resize left:50:0)
shift + cmd - l : yabai -m window --focus east || $(yabai -m display --focus east)

alt - v : yabai -m window --toggle split
alt - f : yabai -m window --toggle float
alt - e : yabai -m window --toggle float;\
          yabai -m window --grid 28:28:1:1:26:26

hyper - left : yabai -m window --space prev
hyper - right : yabai -m window --space next

