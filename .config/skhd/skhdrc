hyper - t : open -a 'kitty'
hyper - i : open -a 'Safari Technology Preview'
hyper - e : open -a 'Hey'
hyper - space : open -a 'Raycast'
hyper - x : open -a 'Todoist'
hyper - m : open -a 'Music'

hyper - b : yabai -m space --layout bsp
hyper - s : yabai -m space --layout stack

hyper - h : yabai -m window --focus east || $(yabai -m display --focus east)
hyper - j : yabai -m window --resize right:50:0 || $(yabai -m window --resize left:50:0)
hyper - k : yabai -m window --resize left:-50:0 ||  $(yabai -m window --resize right:-50:0)
hyper - l : yabai -m window --focus west || $(yabai -m display --focus west)

alt - v : yabai -m window --toggle split
alt - f : yabai -m window --toggle float
alt - e : yabai -m window --toggle float;\
          yabai -m window --grid 28:28:1:1:26:26

hyper - left : yabai -m window --space prev
hyper - right : yabai -m window --space next

